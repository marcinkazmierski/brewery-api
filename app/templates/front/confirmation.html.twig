{% extends 'base.html.twig' %}

{% block body %}
    <div class="px-4 py-5 my-5 text-center">
        <h1 class="display-5 fw-bold">Zdalny browar</h1>
        <div class="col-lg-6 mx-auto">
            <p class="lead mb-4">
                Potwierdzenie konta e-mail.
            </p>
            {% if error is defined and error is not empty %}
                <div class="alert alert-danger" role="alert">
                    Nieprawidłowy link albo konto jest już aktywne!
                </div>
            {% else %}
                <div class="alert alert-success" role="alert">
                    Dzięki za potwierdzenie! <br> Twoje konto zostało aktywowane! Możesz się teraz zalogować z Swojej aplikacji mobilnej ;)
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}



